<p id="notice"><%= notice %></p>

<h1>People</h1>

<table class="table table-hover">
  <thead class="table-dark">
    <tr>
      <th><%= link_to "Name", {sort: "name"}, class: "text-reset" %></th>
      <th><%= link_to "Most recent contact", {sort: "date"}, class: "text-reset" %></th>
      <th>Notes</th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= link_to person.name, person %></td>
        <td><%= I18n.l(latest_contact(person), default: 'never') %></td>
        <td><span class="content" title="<%= person.note %>"><%= person.note&.truncate(30) %></span></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

